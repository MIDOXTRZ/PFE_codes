<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_control"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contrôle de la voiture"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp" />

    <WebView
        android:id="@+id/vediostream"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="40dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:padding="20dp"
        android:columnOrderPreserved="false">

        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageViewUp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/flech_up"
            android:contentDescription="Flèche haut"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageViewLeft"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/flech_left"
            android:contentDescription="Flèche gauche"
            android:layout_gravity="center" />

        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageViewRight"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/flech_right"
            android:contentDescription="Flèche droite"
            android:layout_gravity="center" />

        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageViewDown"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/flech_down"
            android:contentDescription="Flèche bas"
            android:layout_gravity="center" />

        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible" />

        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible" />
    </GridLayout>
</LinearLayout>
