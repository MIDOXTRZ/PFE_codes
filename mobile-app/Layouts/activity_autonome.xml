<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_control"
    android:padding="32dp">

    <TextView
        android:id="@+id/carStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voiture en mouvement"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Démarrer"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:elevation="6dp" />

    <Button
        android:id="@+id/returnToTelecommande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour au Mode Télécommande"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:textSize="18sp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:elevation="6dp" />

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:textSize="18sp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:elevation="6dp" />
</LinearLayout>
